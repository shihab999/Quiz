                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/Q1option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="India"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

            </RadioGroup>

            //.......Question 1 End

            <TextView
